<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, :autocomplete => "off", :class => "form-control", :placeholder => t("devise.login.email_placeholder") %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => t("devise.login.password_placeholder") %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> <%= t("devise.login.remember_me") %>
      </label>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit t("devise.login.log_in"), :class => "btn btn-primary btn-block" %>
  </div>
<% end %>
<%- if devise_mapping.recoverable? %>
  <%= link_to t("devise.login.forgot_password"), new_password_path(resource_name) %>
<% end -%>
