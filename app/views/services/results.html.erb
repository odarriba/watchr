<% content_for :title, t("services.results.title") %>
<div class='row-fluid'>
  <div class='sidebar'>
    <%= render :partial => "sidebar" %>
  </div>
  <div class='content'>
    <div class="page-header clearfix">
      <h1>
        <%= t("services.results.title") %>
        <small>
          <%= @service.name %>
        </small>
        <div id='service-selector' class='pull-right'>
          <%= form_tag service_monitoring_path(), :method => :post, :class => "form-inline", :role => "form" do -%>
            <div class="form-group">
              <%= select_tag "id", 
                    options_for_select(Service.where(:active => true).collect{ |u| [u.name, u.id] }), 
                    :class => "form-control", 
                    :onchange => "if(this.value != '') { var url='#{results_service_path(:id => 'serviceid')}'; window.location=url.replace('serviceid', this.value); }"
                %>
            </div>
          <% end %>
        </div>
      </h1>
    </div>
    <%= bootstrap_flash %>
    <div class='monitoring'>
      <% if (!@service.blank?) %>
        <div id='chart-container' class='chart-container'></div>

        <script>
          $( document ).ready(function() {
            monitoringChartStart({
              container: "chart-container", 
              name: "<%= @service.name %>", 
              interval: <%= @service.interval %>, 
              resume: "<%= @service.resume.to_s %>",
              data_url: "<%= data_service_monitoring_path(@service.id) %>"
            });
          });
        </script>
      <% end %>
    </div>
  </div>
</div>