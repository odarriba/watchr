<% content_for :title, t("hosts.show.title") %>
<div class='row-fluid'>
  <div class='sidebar'>
    <%= render :partial => "sidebar" %>
  </div>
  <div class='content'>
    <div class="page-header clearfix">
      <h1>
        <%= t("hosts.show.title") %>
        <small>
          <%= @host.name %>
        </small>
      </h1>
    </div>
    <%= bootstrap_flash %>
    <div class='form-horizontal'>
      <div class="form-group">
        <label for="host_name" class="col-sm-3 control-label"><%= t("hosts.form.name") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= @host.name %></p>
        </div>
      </div>
      <div class="form-group">
        <label for="host_description" class="col-sm-3 control-label"><%= t("hosts.form.description") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= @host.description %></p>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-md-7 col-sm-9">
          <hr class='divider' />
        </div>
      </div>
      <div class="form-group">
        <label for="host_type" class="col-sm-3 control-label"><%= t("hosts.form.type") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= t("hosts.types.type_#{@host.type.to_s}") %></p>
        </div>
      </div>
      <div class="form-group">
        <label for="host_address" class="col-sm-3 control-label"><%= t("hosts.form.address") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= @host.address %></p>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-md-7 col-sm-9">
          <hr class='divider' />
        </div>
      </div>
      <div class="form-group">
        <label for="host_active" class="col-sm-3 control-label"><%= t("hosts.form.activation") %></label>
        <div class="col-md-7 col-sm-9">
          <% if (@host.is_active?) %>
          <p class="form-control-static text-success"><%= t("hosts.form.active") %></p>
          <% else %>
          <p class="form-control-static text-danger"><%= t("hosts.form.inactive") %></p>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-md-7 col-sm-9">
          <hr class='divider' />
        </div>
      </div>
      <div class="form-group">
        <label for="host_services" class="col-sm-3 control-label"><%= t("hosts.form.services") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= @host.services.to_a.map{|s| s = s.name}.join(", ") %></p>
        </div>
      </div>
      <div class="form-group">
        <label for="host_services" class="col-sm-3 control-label"><%= t("hosts.form.alerts") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= @host.alerts.to_a.map{|s| s = s.name}.join(", ") %></p>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-md-7 col-sm-9">
          <hr class='divider' />
        </div>
      </div>
      <div class="form-group">
        <label for="host_created_at" class="col-sm-3 control-label"><%= t("hosts.form.created_at") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= @host.created_at.strftime("%m/%d/%Y - %H:%M") %></p>
        </div>
      </div>
      <div class="form-group">
        <label for="hosts_updated_at" class="col-sm-3 control-label"><%= t("hosts.form.updated_at") %></label>
        <div class="col-md-7 col-sm-9">
          <p class="form-control-static"><%= @host.updated_at.strftime("%m/%d/%Y - %H:%M") %></p>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-md-7 col-sm-9">
          <hr class='divider' />
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-md-9 col-sm-12">
          <% if (current_user.is_normal?) %>
          <div class='pull-right'>
            <%= link_to "<i class='fa fa-pencil'></i><span class='hidden-sm hidden-xs'>&nbsp;&nbsp;#{t("hosts.index.button.edit")}</span>".html_safe, edit_host_path(@host), :class => "btn btn-info", :title => t("hosts.index.button.edit") %>
            <%= link_to "<i class='fa fa-trash-o'></i><span class='hidden-sm hidden-xs'>&nbsp;&nbsp;#{t("hosts.index.button.destroy")}</span>".html_safe, host_path(@host), :method => :delete, :class => "btn btn-danger", :title => t("hosts.index.button.destroy"), :data => {:confirm => t("hosts.index.button.destroy_confirmation")} %>
          </div>
          <% else %>
          <div class='pull-right'>
            <%= link_to "<i class='fa fa-pencil'></i><span class='hidden-sm hidden-xs'>&nbsp;&nbsp;#{t("hosts.index.button.edit")}</span>".html_safe, nil, :class => "btn btn-info disabled", :title => t("hosts.index.button.edit") %>
            <%= link_to "<i class='fa fa-trash-o'></i><span class='hidden-sm hidden-xs'>&nbsp;&nbsp;#{t("hosts.index.button.destroy")}</span>".html_safe, nil, :class => "btn btn-danger disabled", :title => t("hosts.index.button.destroy")%>
          </div>
          <% end %>
          <%= link_to "<i class='fa fa-chevron-left'></i><span class='hidden-sm hidden-xs'>&nbsp;&nbsp;#{t("hosts.new.back")}</span>".html_safe, hosts_path(:type => @type), :class => "btn btn-default pull-left" %>
        </div>
      </div>
    </div>
  </div>
</div>