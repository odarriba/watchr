<div class="panel panel-default">
  <div class="panel-body">
    <ul class="nav nav-pills nav-stacked">
      <li<% if ((@type.blank?) && (action_name == "index")) %> class="active"<% end %>><%= link_to t("hosts.sidebar.all"), hosts_path() %></li>
      <hr class='divider' />
      <li class='disabled'><a><%= t("hosts.sidebar.view_by_type")%></a></li>
      <% Host::AVAILABLE_TYPES.each do |htype| %>
      <li<% if ((@type == htype) && (action_name == "index")) %> class="active"<% end %>><%= link_to t("hosts.types.type_#{htype.to_s}"), hosts_path(:type => htype) %></li>
      <% end %>
    </ul>
  </div>
</div>